# Backend Makefile â€” development helpers

.PHONY: sync run lint clean

# â”€â”€â”€ uv package management â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

sync:
	uv sync

run:
	uv run python -m src.main

# â”€â”€â”€ Linting â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

lint:
	uv run ruff check src/
	uv run mypy src/ --ignore-missing-imports

# â”€â”€â”€ Cleanup â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

clean:
	rm -rf .cache
	@echo "ðŸ§¹  Cleaned backend cache"
